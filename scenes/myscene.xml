<rt-scene>

<camera>
	<lookat vector3="0.0 0.0 1.0" />
	<eye	vector3="0.0 0.0 0.0" />
	<up		vector3="0.0 1.0 0.0" />
	<fov	angle="60 deg" />
	<near   double="0.0001" />
	<far    double="1000.0" />
</camera>

<image>
	<width double="320" />
	<height double="240" />
	<bgcolor color="0.0 0.0 0.0" />	
</image>

<materials>
	<simplemat id="diffuse">
		<diffuse color="0.7 0.2 0.2" />
		<specular color="0.0 0.0 0.0" />	
		<reflect color="0.0 0.0 0.0" />
		<transmit color="0.0 0.0 0.0" />
		<eta double="0.0"/>
		<n double="0"/>
		<isreflect bool="false"/>
		<istransmit bool="false"/>
	</simplemat>
	<simplemat id="glass">
		<diffuse color="0.5 0.5 0.5" />
		<specular color="0.1 0.1 0.1" />
		<reflect color="0.1 0.1 0.1" />
		<transmit color="0.9 0.9 0.9" />
		<eta double="1.5"/>
		<n double="100" />
		<isreflect bool="true"/>
		<istransmit bool="true"/>
	</simplemat>
	<simplemat id="mirror">
		<diffuse color="0.5 0.5 0.5" />
		<specular color="0.1 0.1 0.1" />
		<reflect color="0.1 0.1 0.1" />
		<transmit color="0.9 0.9 0.9" />
		<eta double="1.5"/>
		<n double="100" />
		<isreflect bool="true"/>
		<istransmit bool="false"/>
	</simplemat>	
</materials>

<objects>
	<sphere material="diffuse">
		<center vector3="10.0 10.0 100.0" />
		<radius double="2e1" />
	</sphere>
	<!-- <sphere material="diffuse">
		<center vector3="20.0 -30.0 100.0" />
		<radius double="20.0" />
	</sphere> -->
	
</objects>

<lights>
	<pointlight>
		<position vector3="0.0 600.0 100.0" />
		<color color="1.0 1.0 1.0" />
		<ka double="0.2" />
	</pointlight>
	<!-- <pointlight>
		<position vector3="500.0 -600.0 100.0" />
		<color color="0.0 1.0 0.0" />
		<ka double="0.2" />
	</pointlight> -->
</lights>

<integrator>
	<whitted>
		<depth-of-recursion int="100" />
	</whitted>
</integrator>


</rt-scene>
